                            <input type="text" class="column-filter" placeholder="@SharedResource.Created_By..." data-column="6" />
                            <i class="fas fa-times filter-icon clear-filter" data-column="6" style="display: none;"></i>
                        </div>
                    </th>
                </tr>
            }
        </thead>
        <tbody>
        </tbody>
    </table>
</div>