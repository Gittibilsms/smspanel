@model GittBilSmsCore.ViewModels.RolePermissionViewModel

@{
    ViewData["Title"] = "Create Role";
}

<h4>@SharedResource.Create_New_Role</h4>

<form asp-action="Create" method="post" autocomplete="off">
    <div>
    <div class="d-flex justify-content-end align-items-center" style="min-height: 100px;">
        <div class="row g-3 align-items-center">
            <div class="col-auto">
                <input class="form-control" placeholder="@SharedResource.Role_Name" required type="text" data-val="true" data-val-required="@SharedResource.The_RoleName_field_is_required_" id="RoleName" name="RoleName" value="">
            </div>

            <div class="col-auto form-check mt-4 d-none">
                <input class="form-check-input" type="checkbox" data-val="true" data-val-required="@SharedResource.ReadOnly_field_is_required_" id="IsReadOnly" name="IsReadOnly" value="true">
                <label class="form-check-label" for="IsReadOnly">@SharedResource.Read_Only</label>
            </div>

            <div class="col-auto">
                <button type="submit" class="btn btn-grd-primary">@SharedResource.Create_Role</button>
            </div>
        </div>
    </div>
    @* Permissions Partial *@
    @await Html.PartialAsync("Permissions", Model)
    </div>
</form>

