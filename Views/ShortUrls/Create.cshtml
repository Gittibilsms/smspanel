@model GittBilSmsCore.ViewModels.CreateShortUrlViewModel
@{
    ViewData["Title"] = "Create ShortURL";
} 

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-body">
                    <h4 class="mb-4">@SharedResource.Create_Short_URL</h4>

                    <form asp-action="Create" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="DestinationUrl" class="form-label">
                                @SharedResource.Destination_URL <span class="text-danger">*</span>
                            </label>
                            <input asp-for="DestinationUrl" class="form-control" placeholder="https://example.com" required />
                            <span asp-validation-for="DestinationUrl" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">@SharedResource.Title</label>
                            <input asp-for="Title" class="form-control" placeholder="@SharedResource.Add_title_to_organize" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CustomBackHalf" class="form-label">@SharedResource.Custom_Back_Half</label>
                            <div class="input-group">
                                <span class="input-group-text">@ViewBag.ShortUrlPrefix</span>
                                <input asp-for="CustomBackHalf" class="form-control" placeholder="custom-name" />
                            </div>
                            <small class="form-text text-muted">
                                @SharedResource.Leave_blank_for_auto_generated
                            </small>
                            <span asp-validation-for="CustomBackHalf" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ExpiryDate" class="form-label">@SharedResource.Expiry_Date</label>
                                    <input asp-for="ExpiryDate" class="form-control" type="date" />
                                    <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="MaxClicks" class="form-label">@SharedResource.Maximum_Clicks</label>
                                    <input asp-for="MaxClicks" class="form-control" type="number" min="1" placeholder="@SharedResource.Unlimited" />
                                    <span asp-validation-for="MaxClicks" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="/ShortUrls" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> @SharedResource.Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> @SharedResource.Create
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>