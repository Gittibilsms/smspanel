          const hub = new signalR.HubConnectionBuilder()
            .withUrl("/chathub")
            .build();

          // 2) Ticket–badge handler (already in place)
          hub.on("ReceiveNewTicket", ticket => {
            const badge = document.getElementById("supportBadge");
            if (!badge) return;
            let n = parseInt(badge.textContent, 10) || 0;
            badge.textContent = n + 1;
          });

          // 3) New: Notification handler
          hub.on("ReceiveNotification", n => {
            // 3a) Update the little badge
            const notifBadge = document.getElementById("notificationCount");
            if (notifBadge) {
              let count = parseInt(notifBadge.textContent, 10) || 0;
              notifBadge.textContent = count + 1;
              notifBadge.style.display = 'inline-block';
            }

            // 3b) Prepend to the dropdown list
            const container = document.querySelector(".notify-list");
            if (!container) return;

            const html = `
              <div>
                <a class="dropdown-item border-bottom py-2"
                   href="javascript:;"
                   onclick="markAsRead(${n.notificationId}, this)">
                  <div class="d-flex align-items-center gap-3">
                    <div class="user-wrapper bg-primary text-primary bg-opacity-10">
                      <span>${n.title.substring(0,2).toUpperCase()}</span>
