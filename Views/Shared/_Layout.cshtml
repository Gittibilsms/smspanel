@using GittBilSmsCore.Helpers
@using Newtonsoft.Json
@using GittBilSmsCore.Models

@{
    var hideLayoutElements = ViewData["HideLayoutElements"] as bool? ?? false;
    var userType = Context.Session.GetString("UserType") ?? "Unknown";
    var isCompanyUser = userType.Equals("CompanyUser", StringComparison.OrdinalIgnoreCase);
    var isMainUser = Context.Session.GetInt32("IsMainUser") == 1;
    var userId = Context.Session.GetInt32("UserId") ?? 0;
    var companyId = Context.Session.GetInt32("CompanyId") ?? 0;
    var canSendSupportRequest = Context.Session.GetInt32("CanSendSupportRequest") == 1;
    var roleId = Context.Session.GetInt32("RoleId");
    var roleIdsRaw = Context.Session.GetString("RoleIds") ?? "";
    var permissionsJson = Context.Session.GetString("UserPermissions") ?? "[]";
    var isAdmin = roleId == 1;
    var isSupervisor = roleId == 2;
    var isSupport = roleId == 4;

    var defaultRoles = new[] { 5, 6, 7 };

    var roleIds = roleIdsRaw.Split(',', StringSplitOptions.RemoveEmptyEntries)
                             .Select(id => Convert.ToInt32(id))
                             .Distinct()
                             .ToList();

    var allPermissions = JsonConvert.DeserializeObject<List<RolePermission>>(permissionsJson) ?? new List<RolePermission>();

    var hasCustomRoles = roleIds.Except(defaultRoles).Any();
    var filteredRoles = hasCustomRoles
        ? roleIds.Except(new[] { 5 }).ToList()
        : roleIds;

    var permissions = allPermissions
        .Where(p => filteredRoles.Contains(p.RoleId))
        .ToList();

    bool HasAccess(string module, string action) =>
        permissions.Any(p =>
            string.Equals(p.Module, module, StringComparison.OrdinalIgnoreCase) &&
            (action == "Read" && p.CanRead ||
             action == "Create" && p.CanCreate ||
             action == "Edit" && p.CanEdit ||
             action == "Delete" && p.CanDelete)
        );


    var canSeeOrders = HasAccess("Order", "Read");

    var canEditOrders = HasAccess("Order", "Edit");
    var canCreateOrders = HasAccess("Order", "Create");
    var canSeeBlacklist = HasAccess("Blacklist", "Read") || HasAccess("Blacklist", "Edit");
    var canSeeCompanies = HasAccess("Firm", "Read");
    var canSeeCompanyUsers = HasAccess("Company_User", "Read") || HasAccess("Company_User", "Edit");
    var canSeeDirectory = HasAccess("Directory", "Read") || HasAccess("Directory", "Edit");
    var canSupport =
        (!isCompanyUser && (HasAccess("Request_for_support", "Read") || HasAccess("Request_for_support", "Edit")))
        || (isCompanyUser && (HasAccess("Request_for_support", "Read") || HasAccess("Request_for_support", "Edit")));
    var canSeeReports = HasAccess("Credit", "Read") || HasAccess("Account_transactions", "Read");
    var canSeeTransactions = HasAccess("Account_transactions", "Read");
    var canSeeCredit = HasAccess("Credit", "Read") || HasAccess("Credit", "Edit") || HasAccess("Credit", "Edit") || HasAccess("Credit", "Edit");


}

