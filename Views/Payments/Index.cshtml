<div class="container mt-4">
    <h4>@SharedResource.Wallet_ID: <span class="badge bg-primary" id="walletId">TUvQeBqCxoGPAgFyfPUuQwdpnfiiGcynZM</span></h4>

    <div class="mt-3">
        <h5>@SharedResource.Select_Payment_Option</h5>
        <ul class="list-group">
            
            <li class="list-group-item d-flex justify-content-between align-items-center">
                @SharedResource._Pay_via_Tronscan
                <a href="https://tronscan.org/#/" target="_blank" class="btn btn-success btn-sm">@SharedResource.Pay</a>
            </li>
          @*   <li class="list-group-item d-flex justify-content-between align-items-center">
                Pay via Binance
                <a href="" target="_blank" class="btn btn-success btn-sm">@SharedResource.Pay</a>
            </li> *@
        </ul>
    </div>

    <div class="mt-4 text-center">
        <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#receiptModal">@SharedResource.Mark_as_Paid</button>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="receiptModal" tabindex="-1" aria-labelledby="receiptModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form id="receiptForm">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@SharedResource.Enter_Invoice_Number</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="text" class="form-control" id="receiptNumber" placeholder="@SharedResource.Invoice_number" required />
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">@SharedResource.Submit </button>
                </div>
            </div>
        </form>
    </div>
</div>