@{
    ViewData["Title"] = "Firm";
}


<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0">@SharedResource.Companies</h4>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addCompanyModal">@SharedResource.Add_Company</button>
    </div>

    <!-- Table -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table id="companiesList" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Populate with JS or server-side -->
                </tbody>
            </table>
        </div>
        </div>
    </div>
</div>

<!-- Add Company Modal -->
<div class="modal fade" id="addCompanyModal" tabindex="-1" aria-labelledby="addCompanyModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form id="addCompanyForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="addCompanyModalLabel">@SharedResource.Add_Company</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body row g-3">
					<div id="stepper2" class="bs-stepper">
						<div class="card">

							<div class="card-header">
								<div class="d-lg-flex flex-lg-row align-items-lg-center justify-content-evenly" role="tablist">

									<div class="step" data-target="#test-nl-2">
										<div class="step-trigger" role="tab" id="stepper2trigger2" aria-controls="test-nl-2">
											<div class="bs-stepper-circle"><i class='material-icons-outlined'>contact_page</i></div>
											<div class="">
												<h5 class="mb-0 steper-title">@SharedResource.Company_Information</h5>
												<p class="mb-0 steper-sub-title">@SharedResource._Enter_Company_Details</p>
											</div>
										</div>
									</div>

									
									<div class="step" data-target="#test-nl-1">
										<div class="step-trigger" role="tab" id="stepper2trigger1" aria-controls="test-nl-1">
											<div class="bs-stepper-circle"><i class='material-icons-outlined'>account_circle</i></div>
											<div class="">
												<h5 class="mb-0 steper-title">@SharedResource.Pricing</h5>
											</div>
										</div>
									</div>

									<div class="step" data-target="#test-nl-3">
										<div class="step-trigger" role="tab" id="stepper2trigger3" aria-controls="test-nl-3">
											<div class="bs-stepper-circle"><i class='material-icons-outlined'>account_circle</i></div>
											<div class="">
												<h5 class="mb-0 steper-title">@SharedResource.User_Information</h5>
											</div>
										</div>
									</div>

								</div>
							</div>
							<div class="card-body">

								<div class="bs-stepper-content">
									<form onSubmit="return false">
										<div id="test-nl-2" role="tabpanel" class="bs-stepper-pane" aria-labelledby="stepper2trigger2">

											<h5 class="mb-4">@SharedResource.Company_Information</h5>

											<div class="row g-3">
												<div class="col-12">
													<label class="form-label">@SharedResource.Company_Name</label>
													<input type="text" class="form-control" placeholder="@SharedResource.Company_Name">
												</div>
												<div class="col-12">
													<div class="form-check form-switch form-check-success">
														<input class="form-check-input" type="checkbox" role="switch" id="trustedSender">
														<label class="form-check-label" for="flexSwitchCheckDefault1">@SharedResource.Trusted_sender</label>
													</div>
													<div class="form-check form-switch form-check-success">
														<input class="form-check-input" type="checkbox" role="switch" id="refundable">
														<label class="form-check-label" for="flexSwitchCheckDefault1">@SharedResource.Refundable</label>
													</div>
													<div class="form-check form-switch form-check-success">
														<input class="form-check-input" type="checkbox" role="switch" id="cannotSend">
														<label class="form-check-label" for="flexSwitchCheckDefault1">@SharedResource.Cannot_send_support_request</label>
													</div>
												</div>
												<div class="col-12">
													<label class="form-label">@SharedResource.Choose_API</label>
													<select class="form-select" id="selectAPI" data-placeholder="@SharedResource.Choose_API">

														<option>Default API</option>
													</select>
												</div>
												
											</div><!---end row-->

										</div>
										<div id="test-nl-1" role="tabpanel" class="bs-stepper-pane" aria-labelledby="stepper2trigger1">
											<h5 class="mb-4">@SharedResource.Pricing</h5>

											<div class="row g-3">
												<div class="col-12 col-lg-6">
													<label class="form-label">@SharedResource.Currency</label>
													<select class="form-select" id="currency" data-placeholder="@SharedResource.Currency">

														<option>TRY</option>
														<option>USD</option>
														<option>EUR</option>
													</select>
												</div>
												<div class="col-12 col-lg-6">
													<label class="form-label">@SharedResource.Low__1_500_000_SMS_unit_price_</label>
													<input type="text" id="lowPrice" class="form-control" placeholder="₺0,23">
												</div>
												<div class="col-12 col-lg-6">
													<label class="form-label">@SharedResource.Medium__500_000_1_000_000_SMS_unit_price_</label>
													<input type="text" id="mediumPrice" class="form-control" placeholder="₺0,23">
												</div>
												<div class="col-12 col-lg-6">
													<label class="form-label">@SharedResource.High__Unit_price_for_SMS_over_1_000_000_</label>
													<input type="text" id="highPrice" class="form-control" placeholder="₺0,23">
												</div>
											</div><!---end row-->

										</div>

										<div id="test-nl-3" role="tabpanel" class="bs-stepper-pane" aria-labelledby="stepper2trigger3">
											<h5 class="mb-4">@SharedResource.User_Information</h5>

											<div class="row g-3">
												<div class="col-12 col-lg-6">
													<label class="form-label">@SharedResource.Name</label>
													<input type="text" id="firstName" class="form-control" placeholder="@SharedResource.Name">
												</div>
												<div class="col-12 col-lg-6">
													<label class="form-label">@SharedResource.User_name</label>
													<input type="text" id="userName" class="form-control" placeholder="@SharedResource.User_name">
												</div>
												<div class="col-12 col-lg-6">
													<label class="form-label">@SharedResource.Email</label>
													<input type="text" id="email" class="form-control" placeholder="@SharedResource.Email">
												</div>
												<div class="col-12 col-lg-6">
													<label class="form-label">@SharedResource.Telephone</label>
													<input type="text" id="telephone" class="form-control" placeholder="@SharedResource.Telephone">
												</div>
												<div class="col-12 col-lg-6">
													<label class="form-label">@SharedResource.Password</label>
													<input type="text" id="password" class="form-control" placeholder="@SharedResource.Password">
													<p class="mb-0 steper-sub-title">@SharedResource.Password_Information</p>
												</div>
											
											</div><!---end row-->
											<div class="col-12 mt-4">
												<div class="d-flex align-items-center justify-content-center gap-3">
													<button class="btn btn-grd-primary px-4" onclick="stepper2.next()">Next<i class='bx bx-right-arrow-alt ms-2'></i></button>
												</div>
											</div>
										</div>

									




									</form>
								</div>

							</div>
						</div>
					</div>
                </div>
            </form>
        </div>
    </div>
</div>