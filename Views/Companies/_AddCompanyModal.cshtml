@model GittBilSmsCore.ViewModels.AddCompanyViewModel

<!-- Add Company Modal -->
<div class="modal fade" id="addCompanyModal" tabindex="-1" aria-labelledby="addCompanyModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form id="addCompanyForm" autocomplete="off">
                <div class="modal-header">
                    <h5 class="modal-title" id="addCompanyModalLabel">@SharedResource.Add_Company</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Company Information -->
                    <h5 class="mb-4">@SharedResource.Company_Information</h5>
                    <div class="row g-3 mb-4">
                        <div class="col-12">
                            <label for="CompanyName" class="form-label">@SharedResource.Company_Name</label>
                            <input type="text" id="CompanyName" name="CompanyName" class="form-control" required>
                        </div>
                        <div class="col-12">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" name="IsTrustedSender" id="IsTrustedSender">
                                <label class="form-check-label" for="IsTrustedSender">@SharedResource.Trusted_sender</label>
                            </div>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" name="IsRefundable" id="IsRefundable">
                                <label class="form-check-label" for="IsRefundable">@SharedResource.Refundable</label>
                            </div>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" name="CanSendSupportRequest" id="CanSendSupportRequest" checked>
                                <label class="form-check-label" for="CanSendSupportRequest">@SharedResource.Can_send_support_request</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <label class="form-label">@SharedResource.Choose_API</label>
                            @Html.DropDownListFor(
                                     m => m.Apid,
                                     Model.ApiSelectList,
                                     new { @class = "form-select select2", id = "chooseApi" } 
                                     )

                        </div>
                    </div>

                    <!-- Pricing -->
                    <h5 class="mb-4">@SharedResource.Pricing</h5>
                    <div class="row g-3 mb-4">
                        <div class="col-12 col-lg-6">
                            <label class="form-label">@SharedResource.Currency</label>
                            <select class="form-select" id="CurrencyCode" name="CurrencyCode" required>
                                <option value="TRY">TRY</option>
                                <option value="USD">USD</option>
                                <option value="EUR">EUR</option>
                            </select>
                        </div>
                        <div class="col-12 col-lg-6">
                            <label class="form-label">@SharedResource.Low__1_500_000_SMS_unit_price_</label>
                            <input type="number" step="0.01" id="LowPrice" name="LowPrice" class="form-control" value="@Model.LowPrice.ToString("0.00", System.Globalization.CultureInfo.InvariantCulture)" required>
                        </div>
                        <div class="col-12 col-lg-6">
                            <label class="form-label">@SharedResource.Medium__500_000_1_000_000_SMS_unit_price_</label>
                            <input type="number" step="0.01" id="MediumPrice" name="MediumPrice" class="form-control" value="@Model.MediumPrice.ToString("0.00", System.Globalization.CultureInfo.InvariantCulture)" required>
                        </div>
                        <div class="col-12 col-lg-6">
                            <label class="form-label">@SharedResource.High__Unit_price_for_SMS_over_1_000_000_</label>
                            <input type="number" step="0.01" id="HighPrice" name="HighPrice" class="form-control" value="@Model.HighPrice.ToString("0.00", System.Globalization.CultureInfo.InvariantCulture)" required>
                        </div>
                    </div>

                    <!-- User Information -->
                    <h5 class="mb-4">@SharedResource.User_Information</h5>
                    <div class="row g-3">
                        <div class="col-12 col-lg-6">
                            <label class="form-label">@SharedResource.Name</label>
                            <input type="text" id="FullName" name="FullName" class="form-control" required>
                        </div>
                        <div class="col-12 col-lg-6">
                            <label class="form-label">@SharedResource.User_name</label>
                            <input type="text" id="UserName" name="UserName" class="form-control" required autocomplete="off">
                        </div>
                        <div class="col-12 col-lg-6">
                            <label class="form-label">@SharedResource.Email</label>
                            <input type="email" id="Email" name="Email" class="form-control" required autocomplete="off">
                        </div>
                        <div class="col-12 col-lg-6">
                            <label class="form-label">@SharedResource.Telephone</label>
                            <input type="text" class="form-control phoneNumberinput" id="Phone" name="Phone" placeholder="(5__) ___-____" maxlength="14" />

                        </div>
                        <div class="col-12 col-lg-6">
                            <label class="form-label">@SharedResource.Password</label>
                            <div class="input-group" id="show_hide_password">
                                <button type="button" class="btn btn-success password-generator" data-password-target="Password" >
                                    <i class="bi bi-arrow-clockwise"></i>
                                </button>
                                <input type="password" class="form-control" id="Password" name="Password" required autocomplete="new-password">
                                <a href="javascript:;" class="input-group-text bg-transparent"><i class="bi bi-eye-slash-fill"></i></a>

                            </div>

                            <p class="mb-0 steper-sub-title">@SharedResource.Password_Information</p>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">@SharedResource.Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
